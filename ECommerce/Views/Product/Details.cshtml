@{

}
@model Product;



<h1>Product Details Page For Product ID @Model.Id</h1>


<div>
    @foreach(var image in Model.ProductImages)
    {
        <img  src="@image.ImageUrl"/>
    }
    <h2>@Model.Name</h2>
    <p>@Model.Description</p>
    <p>Price: @Model.Price $</p>
    <p>Available Stock: @Model.Quantity</p>
    <p>Category: @Model.Category?.Name</p>
    <p>Supplier: @Model.Supplier?.User.Name</p>
    <p>Shop Name: @Model.Supplier?.ShopName</p>
